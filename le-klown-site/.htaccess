# Enable rewrite
RewriteEngine On
RewriteBase /

# Let real files and folders pass through
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Everything else -> SPA entry point
RewriteRule . /index.html [L]

# Optional: avoid MultiViews messing with routes like /shop
Options -MultiViews
